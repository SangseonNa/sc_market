<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" 
        android:layout_gravity="center_vertical|center_horizontal"
        >

        <ImageButton
            android:id="@+id/Menu_Top_what"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:background="@drawable/selector"
            android:src="@drawable/db_settings" />

        <ImageView
            android:id="@+id/Main_Top_logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/menu_logo" />

        <ImageButton
            android:id="@+id/Menu_Top_favorite"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/selector"
            android:src="@drawable/bookmarks"
            android:layout_gravity="center_vertical|center_horizontal"            
            />

    </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/top_under_bg"
	android:layout_gravity="center"
	android:gravity="center_vertical"    
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="메뉴를 선택하세요!"
        android:textColor="#ffffff"
        android:textSize="14dip" 
        android:gravity="center"
        />
    
</LinearLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@drawable/sc_splash"
        >
<ImageButton
    android:id="@+id/Menu_btn_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="43dp"
    android:layout_marginTop="52dp"
    android:src="@drawable/menu_1" 
    android:onClick="click"
    android:background="@android:color/transparent"
    />
<ImageButton
    android:id="@+id/Menu_btn_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/Menu_btn_1"
    android:layout_marginRight="35dp"
    android:layout_marginTop="35dp"
    android:onClick="click"
    android:src="@drawable/menu_2" 
    android:background="@android:color/transparent"
    />

<ImageButton
    android:id="@+id/Menu_btn_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/Menu_btn_1"
    android:layout_below="@+id/Menu_btn_2"
    android:layout_marginTop="35dp"
    android:src="@drawable/menu_3" 
    android:onClick="click"
    android:background="@android:color/transparent"
    />

<ImageButton
    android:id="@+id/Menu_btn_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/Menu_btn_2"
    android:layout_below="@+id/Menu_btn_3"
    android:layout_marginTop="50dp"
    android:src="@drawable/menu_4" 
    android:onClick="click"
    android:background="@android:color/transparent"
    />



    </RelativeLayout>
    
</LinearLayout>