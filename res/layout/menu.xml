<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

       <ImageButton
            android:id="@+id/Menu_Top_what"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="0"
            android:src="@drawable/db_settings" 
			android:background="@drawable/selector"
            />

        <ImageView
            android:id="@+id/Main_Top_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sc_splash" />

        <ImageButton
            android:id="@+id/Menu_Top_favorite"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="0"
            android:src="@drawable/bookmarks" 
            android:background="@drawable/selector"
            />
    </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/top_under_bg"
    android:padding="0dp"
    ></LinearLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@drawable/sc_splash"
        >
<ImageButton
    android:id="@+id/Menu_btn_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="43dp"
    android:layout_marginTop="52dp"
    android:src="@drawable/ic_launcher" 
    android:onClick="click"
    />
<ImageButton
    android:id="@+id/Menu_btn_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/Menu_btn_1"
    android:layout_marginRight="35dp"
    android:layout_marginTop="35dp"
    android:onClick="click"
    android:src="@drawable/ic_launcher" />

<ImageButton
    android:id="@+id/Menu_btn_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/Menu_btn_1"
    android:layout_below="@+id/Menu_btn_2"
    android:layout_marginTop="35dp"
    android:src="@drawable/ic_launcher" 
    android:onClick="click"
    />

<ImageButton
    android:id="@+id/Menu_btn_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/Menu_btn_2"
    android:layout_below="@+id/Menu_btn_3"
    android:layout_marginTop="50dp"
    android:src="@drawable/ic_launcher" 
    android:onClick="click"
    />



    </RelativeLayout>
    
</LinearLayout>