<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/top_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageButton
            android:id="@+id/Menu_Top_what"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="@drawable/selector"
            android:src="@drawable/db_settings" />

        <ImageView
            android:id="@+id/Main_Top_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/menu_logo" />

        <ImageButton
            android:id="@+id/Menu_Top_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/selector"
            android:src="@drawable/bookmarks" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/top_under_bg"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="위치 검색"
            android:textColor="#ffffff"
            android:textSize="14dip" />
    </LinearLayout>



<LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/contentbar"
    >
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:background="@color/titlebar"
        android:layout_height="30dp"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView 
                android:layout_height="30dp"
				android:layout_width="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/check"
                
                />
            <TextView 
				android:layout_height="30dp"
                android:text="지도"
                android:layout_width="match_parent"
				android:textSize="25dip"            
                />
        </LinearLayout>
        
        
   
        
    </LinearLayout>
         <WebView
            android:id="@+id/location_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        
    
</LinearLayout>
</LinearLayout>